<view class="ip_find">
   <button open-type="share" style="width: 40rpx; z-index: 2; position: absolute;right: 60rpx;top: 60rpx;">
    <view class="iconfont icon-fenxiang"></view>
   </button>
    
    <view class="ask-text">
      <view class="ip_find_text">欢迎使用智能AI回答</view>
      <view class="ip_find_remark">发送你想说的话，AI 会告诉你答案哟。</view>
    </view>
    <view class="chat-frame">
      <view style="margin-top: 10%;" wx:if="{{demoShow}}">
        <view data-text="给一个10岁孩子过生日有什么创意吗？" bindtap="copyDemo" class="content-card content-card-left">给一个10岁孩子过生日有什么创意吗？</view>
        
        <view data-text="用 js 写一个冒泡排序" bindtap="copyDemo" class="content-card content-card-right">用 js 写一个冒泡排序</view>
        <view data-text="写一个 2022 年营销总结" bindtap="copyDemo" class="content-card content-card-left">写一个 2022 年营销总结</view>
        <view data-text="使用 Java写一个登录模块" bindtap="copyDemo" class="content-card content-card-right">使用 Java写一个登录模块</view>
        <view data-text="写一个 2022 年营销总结" bindtap="copyDemo" class="content-card content-card-left">写一个 2022 年营销总结</view>
        <view data-text="使用 Java写一个登录模块" bindtap="copyDemo" class="content-card content-card-right">使用 Java写一个登录模块</view><view data-text="写一个 2022 年营销总结" bindtap="copyDemo" class="content-card content-card-left">写一个 2022 年营销总结</view>
        <view data-text="使用 Java写一个登录模块" bindtap="copyDemo" class="content-card content-card-right">使用 Java写一个登录模块</view>
        
      </view>  
    </view>
    <view class="result-view" wx:if="{{showResult}}">
      <view class="result-title">
         <view class="title-result">
         </view>
         <view class="title-copy">
          <view style="float: left;" class="iconfont icon-fuzhi"></view>
          <view style="float: left;" bindtap="copyResult">复制文字</view>
         </view>
      </view>
      <scroll-view scroll-y="true" scroll-top="{{scrollTop}}" class="result-card" >
        <view class="content-info">
          <towxml nodes="{{article}}"/>
        </view> 
      </scroll-view>
    </view>
    <view style="position: absolute;bottom: 20rpx;width: 90%;">
      <view>
        <view bindtap="chatAnswer" class="iconfont icon-fasong" style="position: absolute; right: 0rpx;padding: 17rpx;z-index: 3;"></view>
        <input class="ip_input" type="text" value="{{searchText}}" placeholder="输入内容" placeholder-class="input-text" bindinput="changeText" 	/>
      </view>
      <!-- <view class="ip_find_btn">
        <view >发送</view>
      </view> -->
    </view>
    
 
</view>
